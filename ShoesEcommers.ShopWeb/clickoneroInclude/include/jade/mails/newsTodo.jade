doctype transitional
html(xmlns="http://www.w3.org/1999/xhtml")
	head
		title clickOnero
		meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
		style(type="text/css").
			td img {
				display: block;
			}
			p {
				margin: 15px 0;
			}
	body(bgcolor="#ffffff", style="text-align: center", topmargin="0", leftmargin="0")
		include scaffolding/header-mail.jade
		+topTable
		+headerLogo
		table(align="center", border="0", cellpadding="5", cellspacing="0")
			tr: td: table(width="100%", cellpadding="0", cellspacing="0")
				tr: td: a(href="#"): img(src="images/NYC.jpg" alt="NYC" width="575" height="183")
				tr: td: a(href="#"): img(src="images/puma.jpg" alt="Puma" width="575" height="183")
				tr: td: a(href="#"): img(src="images/benedettis.jpg" alt="Pizza grande Benedettis" width="575" height="183")
			tr: td: table(width="100%")
				tr 
					td(align="left"): +fontFace('21px', '', 'PRODUCTOS')
					td(align="right"): a(href="#"): +fontFace('', '5574f9', 'VER MÁS OFERTAS DE PRODUCTOS &gt;')
			tr: td: table(cellspacing="0", cellpadding="0")
				tr
					td: a(href="#"): img(src="images/nike.jpg" alt="Nike" width="193" height="125")
					td: a(href="#"): img(src="images/iphone.jpg" alt="iPhone cases" width="193" height="125")
					td: a(href="#"): img(src="images/inks.jpg" alt="Inks" width="193" height="125")
				tr
					td: a(href="#"): img(src="images/herschel.jpg" alt="Herschel" width="193" height="125")
					td: a(href="#"): img(src="images/bra.jpg" alt="Bra" width="193" height="125")
					td: a(href="#"): img(src="images/cosmetic.jpg" alt="Cosmetic campaing" width="193" height="125")
			each val in [[{seccion: 'VIAJES', img1: '2_9', img2: '2_4', img3:'2_8'}], [{seccion: 'SERVICIOS', img1: '2_2', img2: '2_7', img3:'2_6', more: 1}]]
				tr: td: table(width="100%")
					tr 
						td(align="left"): +fontFace('21px', '', val[0].seccion)
						td(align="right"): a(href="#"): +fontFace('', '5574f9', 'VER MÁS OFERTAS DE '+val[0].seccion+' &gt;')
				tr: td: table(cellspacing="3")
					- var iteracion = 3
					- if(val[0].more)
						- iteracion = 4
					- for (var i=1;i<iteracion;i++)
						tr
							td(align="left"): +product(val[0].img1, 190, 120)
							td(align="left"): +product(val[0].img2, 190, 120)
							td(align="left"): +product(val[0].img3, 190, 120)
		+mainFooter