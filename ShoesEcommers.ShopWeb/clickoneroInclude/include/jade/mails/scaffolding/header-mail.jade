mixin mainDoctype
	doctype transitional
	html(xmlns="http://www.w3.org/1999/xhtml")
		head
			title clickOnero
			meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
			style(type="text/css").
				td img {
					display: block;
				}
				p {
					margin: 15px 0;
				}
		body(bgcolor="#ffffff", style="text-align: center", topmargin="0", leftmargin="0")

mixin topTable
	table(cellpadding="10", cellspacing="10", align="center", width="100%", bgcolor="#e6e6e6")
		tr: td(align="center")
			+fontFace('', '', 'Si no puedes ver las imágenes, agrega <a href="mailto:newsletter@deal.clickonero.com.mx">newsletter@deals.clickonero.com.mx</a> a tu libreta de direcciones.<br/>Si no puedes ver bien este mensaje da <a href="#">click aquí</a> para verlo en tu explorador.')
				

mixin headerLogo
	table(align="center", border="0", cellpadding="15", cellspacing="10", width="620")
		tr 
			td(bgcolor="#f4f4f4")
				table(width="100%")
					tr
						td(align="left"): img(src="images/clickoneroLogo.png" alt="Logo clickOnero" width="92" height="20")
						td(align="right"): a(href="#", style="color: #ff00d2"): +fontFace('', 'ff00d2', "VER EL SITIO &gt;")

mixin fontFace(size, color, text)
	- var tamanio = '11px'
	- var colour = '000000'
	if size
		- tamanio = size
	if color
		- colour = color
	font(style="font-size: #{tamanio}", color="##{colour}", face="Arial, sans-serif") !{text}

mixin product(src, width, height)
	p: a(href="#"): img(src="images/#{src}.jpg", width="#{width}", height="#{height}", alt="#{src}")
	p
		+fontFace('12px', '', 'Denim look Leggings')
		br
		+fontFace('12px', '', 'Pull &amp; Bear')
		br
		strong: +fontFace('12px', '', '$350.00')
		br
		strike: +fontFace('10px', 'cccccc', '$650.00')

